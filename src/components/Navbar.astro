---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
const links = ["", "DESTINATION", "CREW", "TECHNOLOGY"];

import logo from '/shared/logo.svg';
---

<header class="shadow">
  <div class="container mx-auto py-3 flex justify-between items-center w-100">
    <a href="/" class="">
      <img src={logo} class="d-block" alt="Logo" />
    </a>
    <nav>
      {links.map((link, index) => (
        <li>
          <a
            href={link !== "" ? './' + link.toLowerCase() : "/"}
            class=`font-barlow-condensed ${currentPath == link.toLowerCase() ? 'active' : ''}`
          >
            <span>0{index}</span>{link == "" ? "HOME" : link}
          </a>
        </li>
      ))}
    </nav>
  </div>
</header>
